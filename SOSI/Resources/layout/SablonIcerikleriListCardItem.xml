<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<android.support.v7.widget.CardView
        app:cardBackgroundColor="#fff"
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		app:cardElevation="0dp"
		android:layout_height="wrap_content"
		app:cardUseCompatPadding="false"
		app:cardPreventCornerOverlap="false">
	<LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1" >
            <RelativeLayout
         android:minWidth="25px"
         android:minHeight="25px"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/relativeLayout1" >
         <TextView
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:textColor="#686868"
             android:text="1 Ocak, 14:20"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/textView1" />
         <TextView
              android:layout_alignParentRight="true"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="@drawable/gradientbg_raunded"
              android:textColor="#fff"
              android:text="Normal Post"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textView2" />
    </RelativeLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/ımageView1" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/videohazne" >
            <VideoView
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/videoView1" />
                <ImageView
                    android:padding="20dp"
                    android:tint="#fff"
                    android:background="@drawable/playbacground"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_circle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ımageView2" />
            </RelativeLayout>
            <TextView
                    android:layout_marginTop="10dp"
                     android:textColor="#686868"
                     android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/textView3" />
            <TextView
                android:textSize="16dp"
                android:gravity="right"
                android:textColor="#1E1E1E"
                android:text="Paylaşıma 00:00:00 Kaldı"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

	</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>
