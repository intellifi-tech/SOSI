<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="460dp">
    <LinearLayout
        android:background="@drawable/popupbg1"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="316.5dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:gravity="center"
            android:text="İşletmenizin sosyal medya hesabında 1 ayda kaç görsel paylaşmak istiyorsunuz?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="12.0dp" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="99"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/linearLayout2">
            <android.support.v7.widget.CardView
                android:animateLayoutChanges="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
		        android:id="@+id/card_view1"
		        app:cardBackgroundColor="@android:color/transparent"
		        android:layout_width="0dp"
                android:layout_weight="33"
		        app:cardElevation="3dp"
		        app:cardCornerRadius="20dp"
		        android:layout_height="wrap_content"
		        app:cardUseCompatPadding="false"
		        app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:background="@drawable/gradientbg"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/linearLayout4" >
                     <TextView
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:animateLayoutChanges="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
		        android:id="@+id/card_view2"
		        app:cardBackgroundColor="@android:color/transparent"
		        android:layout_width="0dp"
                android:layout_weight="33"
		        app:cardElevation="3dp"
		        app:cardCornerRadius="20dp"
		        android:layout_height="wrap_content"
		        app:cardUseCompatPadding="false"
		        app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:background="@drawable/gradientbg"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/linearLayout4" >
                     <TextView
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:animateLayoutChanges="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
		        android:id="@+id/card_view3"
		        app:cardBackgroundColor="@android:color/transparent"
		        android:layout_width="0dp"
                android:layout_weight="33"
		        app:cardElevation="3dp"
		        app:cardCornerRadius="20dp"
		        android:layout_height="wrap_content"
		        app:cardUseCompatPadding="false"
		        app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:background="@drawable/gradientbg"
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/linearLayout4" >
                     <TextView
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">
        <refractored.controls.CircleImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/male_avatar"
            app:civ_border_width="0dp"
            app:civ_border_color="#fff"
            android:layout_marginTop="50.0dp" />
    </RelativeLayout>
    <Button
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:background="@drawable/gradientbg_raunded"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="DEVAM ET"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button1" />
</RelativeLayout>
