<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:background="#fff"
    android:padding="10dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<androidx.cardview.widget.CardView
        app:cardBackgroundColor="#fff"
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		app:cardElevation="0dp"
		android:layout_height="wrap_content"
		app:cardUseCompatPadding="false"
		app:cardPreventCornerOverlap="false">
		<RelativeLayout
            android:background="?android:attr/selectableItemBackground"
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout1">
            <com.ebr163.bifacialview.view.BifacialView
                android:id="@+id/bifacialvieww"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                app:arrowColor="#fff"
                app:arrowCornerRadius="2dp"
                app:arrowFill="true"
                app:arrowStrokeWidth="3dp"
                app:arrowWidth="27dp"
                app:arrowHeight="41dp"
                app:arrowMargin="10dp"
                app:arrowVisibility="true"
                app:delimiterWidth="3dp"
                app:touchMode="delimiter"
                app:drawableLeft="@mipmap/logononbg"
                app:drawableRight="@mipmap/logononbg"
                app:leftText="before"
                app:rightText="after"
                app:textColor="@android:color/transparent"
                app:textSize="20sp"
                app:delimiterPadding="20dp"/>
		</RelativeLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
