<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/profileheaderbg"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="102.5dp"
        android:id="@+id/relativeLayout1" >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" >
            <ImageButton
                android:tint="#fff"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/arrow_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ımageButton1" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Paylaşım Detayı"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView1" />
            <LinearLayout
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageButton
                    android:tint="#fff"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/edit_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/ımageButton2" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">
        <ScrollView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/paylasbutton"
            android:id="@+id/scrollView1" >
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1" >
                <LinearLayout
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout2" >
                        <TextView
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:background="@drawable/gradientbg_raunded"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#fff"
                            android:text="Normal Post"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView2" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:textColor="#686868"
                            android:text="1 Ocak, 14:00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView3" />
                    </LinearLayout>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/ımageView1" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/videohazne" >
            <VideoView
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:id="@+id/videoView1" />
                <ImageView
                    android:visibility="gone"
                    android:padding="20dp"
                    android:tint="#fff"
                    android:background="@drawable/playbacground"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_circle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/baslabutton" />
            </RelativeLayout>
                 <TextView
                    android:layout_marginTop="10dp"
                     android:textColor="#686868"
                     android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:id="@+id/textView4" />
            </LinearLayout>
          </ScrollView>
        <Button
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:background="@drawable/gradientbg_raunded"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Paylaş"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/paylasbutton"
            android:layout_marginTop="15.0dp" />
    </RelativeLayout>
</LinearLayout>
