<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/animation_view1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_loop="false"
            app:lottie_autoPlay="false" />
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="Tebrikler!"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerInParent="true"
            android:id="@+id/animation_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_loop="false"
            app:lottie_autoPlay="false"
            android:layout_marginBottom="40.0dp"
            android:layout_marginTop="40.0dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="İşletmen için oluşturduğun paylaşım akışın şuan bize aktarılıyor. Aktarım tamamlandıktan sonra ki 24 saat içerisinde uzman tasarımcılarımız ile birlikte paylaşımlarını hazır hale getireceğiz. Tamamlanan tasarımlarını kullanmak ve Contento'nun diğer ayrıcalıklarından faydalanabilmek için ödeme sayfasına yönlendirileceksiniz."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="5.0dp" />
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/gradientbg_raunded"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="Aboneliğe Devam Et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/button1" />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/gradientbg_raunded"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="Ücretsiz Devam Et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/button2" />
   </LinearLayout>
</RelativeLayout>
