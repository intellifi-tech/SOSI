<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/profileheaderbg"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="102.5dp"
        android:id="@+id/relativeLayout1" >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" >
            <ImageButton
                android:tint="#fff"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/arrow_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ımageButton1" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Yeni Şablon"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView1" />
            <ImageButton
                android:layout_alignParentRight="true"
                android:tint="#fff"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ımageButton2" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#686868"
        android:gravity="center"
        android:text="1 aylık paylaşım için lütfen ** adet fotoğraf yükleyin ve isimlerini girin;"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginBottom="10dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button1"
            android:id="@+id/recyclerView1" />
        <Button
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:background="@drawable/gradientbg_raunded"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Şablonu Gönder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button1"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>
</LinearLayout>
