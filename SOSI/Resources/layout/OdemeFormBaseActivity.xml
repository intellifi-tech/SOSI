<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <RelativeLayout
        android:background="@drawable/profileheaderbg"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="102.5dp"
        android:id="@+id/relativeLayout1" >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" >
            <ImageButton
                android:tint="#fff"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/arrow_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ımageButton1" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Abonelik Başlat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView1" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        card_view:cardBackgroundColor="#fff"
        card_view:cardElevation="10dp"
        android:layout_margin="16dp"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardUseCompatPadding="false"
        card_view:cardPreventCornerOverlap="false">
        <LinearLayout
            android:background="@drawable/creditcardbg"
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1">
            <ImageView
                android:padding="5dp"
                android:src="@mipmap/ic_chip"
                android:layout_width="70dp"
                android:scaleType="centerInside"
                android:layout_height="60dp"
                android:id="@+id/ımageView1"
                android:layout_marginTop="10.0dp"
                android:layout_marginLeft="10.0dp" />
            <TextView
                android:textColor="#fff"
                android:maxLength="24"
                android:textSize="25dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:text="2158 4856 4897 2568"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="9.0dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout4">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout5">
                    <TextView
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:paddingLeft="20dp"
                        android:text="MESUT POLAT"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_marginTop="6.5dp" />
                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout3"
                        android:layout_marginTop="7.5dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout4">
                            <TextView
                                android:textSize="8dp"
                                android:textColor="#fff"
                                android:text="Son"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView4"
                                android:layout_marginTop="2.0dp" />
                            <TextView
                                android:textSize="8dp"
                                android:textColor="#fff"
                                android:text="Kul."
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView5" />
                        </LinearLayout>
                        <TextView
                            android:textColor="#fff"
                            android:gravity="top"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="02 / 2020"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_marginLeft="5.0dp" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:paddingLeft="30dp"
                    android:paddingTop="30dp"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/visa"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/cardtypee"
                    android:layout_marginRight="5.0dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        card_view:cardBackgroundColor="#fff"
        card_view:cardElevation="5dp"
        android:layout_margin="16dp"
        android:id="@+id/card_view"
        card_view:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="false"
        card_view:cardPreventCornerOverlap="false">
           <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout16">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/griborder"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:id="@+id/linearLayout2">
            <ImageView
                android:tint="#50ffffff"
                android:padding="5dp"
                android:src="@mipmap/login_email_icon"
                android:layout_width="30.5dp"
                android:layout_height="match_parent"
                android:id="@+id/ımageView2"
                android:layout_marginLeft="15.0dp" />
            <EditText
                android:textSize="12dp"
                android:paddingLeft="15dp"
                android:background="@null"
                android:textColor="#11122E"
                android:hint="Ad Soyad"
                android:textColorHint="#9011122E"
                android:layout_marginLeft="0.0dp"
                android:layout_marginRight="0.0dp"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardnamee" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/griborder"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:id="@+id/linearLayout2">
            <ImageView
                android:tint="#50ffffff"
                android:padding="5dp"
                android:src="@mipmap/cardnumbericon1"
                android:layout_width="30.5dp"
                android:layout_height="match_parent"
                android:id="@+id/ımageView2"
                android:layout_marginLeft="15.0dp" />
            <EditText
                android:textSize="12dp"
                android:paddingLeft="15dp"
                android:background="@null"
                android:textColor="#11122E"
                android:hint="Kart Numarası"
                android:textColorHint="#9011122E"
                android:layout_marginLeft="0.0dp"
                android:layout_marginRight="0.0dp"
                android:inputType="number"
                android:maxLength="16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardnumberr" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="15.5dp">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:background="@drawable/griborder"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="50.0dp"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:tint="#5011122E"
                    android:padding="5dp"
                    android:src="@mipmap/calender_img1"
                    android:layout_width="30.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <EditText
                    android:maxLength="5"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:textColor="#11122E"
                    android:hint="S.K.T."
                    android:textColorHint="#9011122E"
                    android:layout_marginLeft="0.0dp"
                    android:layout_marginRight="0.0dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/skt" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@drawable/griborder"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="50.0dp"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:tint="#5011122E"
                    android:padding="5dp"
                    android:src="@mipmap/login_lock_icon"
                    android:layout_width="30.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <EditText
                    android:maxLength="3"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:textColor="#11122E"
                    android:hint="CVC"
                    android:textColorHint="#9011122E"
                    android:layout_marginLeft="0.0dp"
                    android:layout_marginRight="0.0dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cvc" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:textSize="10dp"
            android:textColor="#fff"
            android:background="@drawable/gradientbg_raunded"
            android:text="ABONELİĞİ BAŞLAT"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/button1" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
