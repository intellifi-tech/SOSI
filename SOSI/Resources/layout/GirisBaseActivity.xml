<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradientbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="81.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/ımageView1"
        android:layout_marginTop="37.0dp" />
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:text="SOSİ'ye"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="38.5dp" />
    <TextView
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:text="HOŞGELDİN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/hesapolusturinputbg"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/linearLayout1">
        <ImageView
            android:tint="#fff"
            android:padding="5dp"
            android:src="@drawable/mail"
            android:layout_width="30.5dp"
            android:layout_height="match_parent"
            android:id="@+id/ımageView2"
            android:layout_marginLeft="15.0dp" />
        <EditText
            android:textSize="12dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:textColor="#fff"
            android:hint="Email Adresiniz"
            android:textColorHint="#fff"
            android:layout_marginLeft="0.0dp"
            android:layout_marginRight="0.0dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText1" />
      </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/hesapolusturinputbg"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/linearLayout2">
       <ImageView
            android:tint="#fff"
            android:padding="5dp"
            android:src="@drawable/lock"
            android:layout_width="30.5dp"
            android:layout_height="match_parent"
            android:id="@+id/ımageView2"
            android:layout_marginLeft="15.0dp" />
        <EditText
            android:textSize="12dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:textColor="#fff"
            android:hint="Şifreniz"
            android:textColorHint="#fff"
            android:layout_marginLeft="0.0dp"
            android:layout_marginRight="0.0dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText2" />
    </LinearLayout>
     <Button
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/buttonbg2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="GİRİŞ YAP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1" />
    <LinearLayout
        android:layout_marginTop="12.0dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_marginBottom="12dp">
        <TextView
            android:textColor="#fff"
            android:textSize="12dp"
            android:text="Şifreni Unuttum"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:id="@+id/textView5" />
        <TextView
            android:textColor="#fff"
            android:textSize="12dp"
            android:gravity="right"
            android:text="Üye ol"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6" />
    </LinearLayout>
    <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/facebookbuttonbg"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:tint="#fff"
                    android:src="@mipmap/facebooklogo1"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <TextView
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="FACEBOOK İLE OTURUM AÇ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1" />
            </LinearLayout>
    <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@drawable/inputbg1"
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/linearLayout1">
                <ImageView
                    android:src="@mipmap/googlelogo1"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ımageView2"
                    android:layout_marginLeft="15.0dp" />
                <TextView
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:textColor="#EA4335"
                    android:text="GOOGLE İLE OTURUM AÇ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1" />
            </LinearLayout>
</LinearLayout>
