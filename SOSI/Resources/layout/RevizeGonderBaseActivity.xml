<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/profileheaderbg"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="102.5dp"
        android:id="@+id/relativeLayout1" >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2" >
            <ImageButton
                android:tint="#fff"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/arrow_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ımageButton1" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="Revize Gönder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/textView1" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">
        <EditText
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textSize="16dp"
            android:hint="Lütfen detaylı bir şekilde revize nedeninizi belirtin. "
            android:gravity="top|left"
            android:layout_above="@+id/button1"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText1" />
        <Button
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:background="@drawable/gradientbg_raunded"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Gönder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button1" />
    </RelativeLayout>
</LinearLayout>
